@model IEnumerable<LibrarySystem.Web.Models.CommentModel>

<h4>Comments</h4>

@if (Model.Count() > 0)
{
    foreach (var item in Model)
    {
        <div><strong>@item.Author</strong> @item.CreatedOn</div>
        <div><em>@item.Text</em></div>
    }
}
else
{
    <div><strong>No Comments</strong></div> 
}
