@{
    ViewBag.Title = "Places";
}

<h2>Places</h2>

<div class="hero-unit">
    <h2>Places</h2>

    @(Html
    .Kendo().Grid(Model)
    .Name("books-grid")
    .Columns(columns =>
            {
                columns.Bound(p => p.Owner);
                columns.Bound(p => p.Name);
                columns.Bound(p => p.Description);
                columns.Bound(p => p.City);
                columns.Bound(p => p.Capacity);
                columns.Bound(p => p.Category);
                columns.Template(@<text>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id })
                </text>);
                columns.Template(@<text>
            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </text>);
                @*columns.Template(@<text>
            @Html.ActionLink("Upload", "Upload", new { id = item.Id })
                </text>);*@
            })
                                    .Sortable(sort =>
                                            {
                                                sort.AllowUnsort(false);
                                                sort.SortMode(GridSortMode.SingleColumn);
                                            })
                                    .Pageable()
                                    .Filterable()
                                    .DataSource(dataSource => dataSource
                                        .Server()
                                        .Read(read => read.Action("Index", "Place"))
                                    .PageSize(3)))
</div>

<div>
    @Html.ActionLink("Back to main administration page", "Index", "Main")
</div>



