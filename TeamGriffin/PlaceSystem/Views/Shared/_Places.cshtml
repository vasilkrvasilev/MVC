    <ul class="thumbnails">
        @if (Model.Count() > 0)
        {
            foreach (var item in Model)
            {
                <li class="span3 home1">
                    <div class="thumbnail">
                        @*<img src="http://placehold.it/320x200" alt="ALT NAME">*@
                        <img src="@item.Pictures.FirstOrDefault().Url" alt="300x200" style="width: 200px;height: 150px;" />
                        <div class="caption">
                            <h3>@item.Name</h3>
                            <p>City - @item.City</p>
                            <p>Category - @item.Category</p>
                            @*<p align="center"><a href="http://bootsnipp.com/" class="btn btn-primary btn-block">Open</a></p>*@
                            <p align="center" class="btn btn-primary btn-block">@Html.ActionLink("Details", "Detail", "Home", new { id = item.Id }, null)</p>
                        </div>
                    </div>
                </li>
            }
        }
        else
        {
            <li class="span12">
                <h4>There are currently no added place</h4>
            </li>
        }

    </ul>
