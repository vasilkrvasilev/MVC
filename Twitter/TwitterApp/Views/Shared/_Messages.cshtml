@model IEnumerable<Twitter.Models.Message>

@if (Model.Count() > 0)
{
    foreach (var item in Model)
    {
        <div>
            <h3>@item.Title</h3>
            <h5>@item.CreatedOn by @item.Author.UserName</h5>
            <strong>@item.Text</strong>
            @Html.Partial("_Tags", item.Tags)
        </div>
    }
}
else
{
    <div>
        <strong>No Messages found</strong>
    </div>
}

