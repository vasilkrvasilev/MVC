@model IEnumerable<_03.Quest.Models.QuestionModel>

@using (Html.BeginForm("Search", "Home"))
{
    <br />
    @Html.Label("searchLabel", "Search for")
    @Html.TextBox("searchBox")
    <br />
    <input type="submit" value="Search" />
    <br />
}

@if (Model.Count() > 0)
{
    foreach (var item in Model)
    {
        <div>
            @Html.ActionLink("Details", "ById", "Home", new { id = item.Id }, null)
            <strong>@item.Text</strong>
        </div>
    }
}
else
{
    <div>
        <strong>No Questions found</strong>
    </div>
}
