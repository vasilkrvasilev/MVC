@model IEnumerable<_03.Quest.Models.AnswerModel>

@if (Model.Count() > 0)
{
    foreach (var item in Model)
    {
        <div>
            @Html.ActionLink("Vote", "Index", "Answers", new { id = item.Id }, null)
            <strong>@item.Text</strong>
            <strong>Yes - @item.Votes.Where(x => x.Type == "Yes").Count().ToString()</strong>
            <strong>No - @item.Votes.Where(x => x.Type == "No").Count().ToString()</strong>
        </div>
    }
}
else
{
    <div>
        <strong>No Answers found</strong>
    </div>
}

