@model IEnumerable<ExamApp.Web.Models.TicketHomeViewModel>
@{
    ViewBag.Title = "Ticketing System";  
}

<div class="hero-unit">
    <h1>@ViewBag.Title</h1>

    <div class="row-fluid">
        @for (int index = 0; index < Model.Count(); index++)
        {
            var ticket = Model.ElementAt(index);
            <div class="span4">
                <h2>@ticket.Title</h2>
                <div><strong>Category: </strong>@ticket.Category</div>
                <div><strong>Author: </strong>@ticket.Author</div>
                <div>@ticket.Comments comment(s)</div>
                <p><a class="btn" href="@Url.Action("Details", "Tickets", new { ticket.Id })">More Details...</a></p>
            </div>

            if (index > 0 && (index + 1) % 3 == 0)
            {
                @:</div>
                @:<div class="row-fluid">
            }
        }
    </div>
</div>